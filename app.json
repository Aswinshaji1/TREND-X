{
  "name": "TREND-X",
  "description": "JavaScript WhatsApp Bot Created by Trendex",
  "logo": "https://files.catbox.moe/adymbp.jpg", 
  "keywords": ["bot", "whatsapp", "trendex"],
  "success_url": "/",
  "stack": "heroku-24",

  "env": {
    "SESSION_ID": {
      "description": "Put your session ID here.",
      "required": true,
      "value": ""
    },
    "ALIVE_IMG": {
      "description": "Paste your image URL here.",
      "required": true,
      "value": "your-image-url"
    },
    "ALIVE_MSG": {
      "description": "The message sent when bot is alive.",
      "required": true,
      "value": "HI DEAR IM ONLINE.!!♻️"
    },
    "PREFIX": {
      "description": "Bot command prefix. Don't leave it blank.",
      "required": true,
      "value": "."
    },
    "MODE": {
      "description": "Bot operation mode: public, private, inbox, group.",
      "required": true,
      "value": "public"
    },
    "AUTO_VOICE": {
      "description": "Enable auto voice message (true/false).",
      "required": true,
      "value": "true"
    },
    "AUTO_REPLY": {
      "description": "Enable auto reply (true/false).",
      "required": true,
      "value": "true"
    },
    "AUTO_STICKER": {
      "description": "Enable auto sticker response (true/false).",
      "required": true,
      "value": "false"
    },
    "AUTO_READ_STATUS": {
      "description": "Enable auto read status updates (true/false).",
      "required": true,
      "value": "true"
    },
    "ANTI_LINK": {
      "description": "Enable group anti-link filter (true/false).",
      "required": true,
      "value": "true"
    },
    "ANTI_BAD": {
      "description": "Enable group bad word filter (true/false).",
      "required": true,
      "value": "false"
    },
    "FAKE_RECORDING": {
      "description": "Enable fake recording status (true/false).",
      "required": true,
      "value": "true"
    },
    "AUTO_REACT": {
      "description": "Enable auto reactions (true/false).",
      "required": false,
      "value": "false"
    },
    "OWNER_REACT": {
      "description": "Enable reactions to owner messages (true/false).",
      "required": false,
      "value": "false"
    },
    "BOT_NAME": {
      "description": "Bot display name.",
      "required": true,
      "value": "✦『TREND-X』✦"
    },
    "HEART_REACT": {
      "description": "Enable heart emoji reactions only (true/false).",
      "required": true,
      "value": "false"
    }
  },

  "buildpacks": [
    {
      "url": "https://github.com/heroku/heroku-buildpack-nodejs"
    }
  ]
}
