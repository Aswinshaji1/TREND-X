const fs = require('fs');
const path = require('path');
const file = path.join(__dirname, 'chatbot-users.json');

function getUsers() {
  return JSON.parse(fs.readFileSync(file, 'utf8'));
}

function saveUsers(data) {
  fs.writeFileSync(file, JSON.stringify(data, null, 2));
}

function addUser(id) {
  let users = getUsers();
  if (!users.includes(id)) {
    users.push(id);
    saveUsers(users);
  }
}

function removeUser(id) {
  let users = getUsers().filter(u => u !== id);
  saveUsers(users);
}

function isChatbotUser(id) {
  return getUsers().includes(id);
}

module.exports = {
  addUser,
  removeUser,
  isChatbotUser
};
